<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:paddingLeft="64dp"
    android:paddingRight="32dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="#fffc970b"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageViewHour"
        android:src="@drawable/clear_day"
        android:paddingLeft="10dp"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleImageView"
        android:src="@drawable/clear_day"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureHourLabel"
        android:gravity="center"
        android:textColor="#f25019"
        android:text="100"
        android:layout_marginBottom="14dp"
        android:layout_alignBottom="@+id/circleImageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id="@+id/hourNameLabel"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_alignBaseline="@+id/temperatureHourLabel"
        android:layout_alignBottom="@+id/temperatureHourLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>