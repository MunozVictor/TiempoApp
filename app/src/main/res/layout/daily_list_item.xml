<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:paddingLeft="64dp"
    android:paddingRight="32dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="#fffc970b"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleImageView"
        android:src="@drawable/iconoitem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureHourLabel"
        android:gravity="center"
        android:textColor="#f25019"
        android:text="100"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/circleImageView"
        android:layout_alignEnd="@+id/circleImageView"
        android:layout_alignBottom="@+id/circleImageView"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/dayNameLabel"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_alignBaseline="@+id/temperatureHourLabel"
        android:layout_alignBottom="@+id/temperatureHourLabel"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView"
        android:src="@drawable/clear_day"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/circleImageView"
        android:layout_toEndOf="@+id/circleImageView"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/circleImageView" />


</RelativeLayout>